\subsection{Aufgabe 2}
\subsubsection{(i)}
$\wk{X=Y} = \wk{X=1,Y=1} + \wk{X=2,X=2} = \frac{3}{8}$

\subsection{(ii)}
 $\wk{2X=Y} = \wk{X=1,Y=2} + \wk{X=2,X=4} = 0$

\subsubsection{(iii)}
$\wk{X \leq Y} = 1$

\subsection{(iv)}
$\wk{X < Y} = \wk{X \leq Y} - \wk{X=Y} = \frac{5}{8}$

\subsubsection{(v)}
$\wk{Y+X gerade} = \wk{X=1,Y=1} + \wk{X=1,Y=3} + \wk{X=2,Y=2} + \wk{X=2,Y=4} = \frac{4}{8}$

